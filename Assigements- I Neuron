    "#class creation\n",
    "class dog():\n",
    "    def __init__(self,name,age,color):\n",
    "        self.name = name\n",
    "        self.age = age\n",
    "        self.color = color\n",
    "    def intro(self):\n",
    "        print(f\"my name is {self.name},I am {self.age} years old\")\n",
    "ram = dog(\"ram\",12,\"black\")\n",
    "ram.intro()"
